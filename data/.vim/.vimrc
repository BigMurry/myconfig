" take effect immediately
" :source ~/.vimrc
set nu
syntax on
colorscheme badwolf
set tabstop=2
set softtabstop=2
set shiftwidth=2
set smartindent
" expand tab to spaces
set expandtab
set cursorline

" highlight word during typing when search
set incsearch

" highlight matches
set hlsearch

" folding
set foldenable
set foldlevelstart=10
set foldmethod=indent

